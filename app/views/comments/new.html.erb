<h1>New Comment</h1>

<%= form_for [@item, @comment] do |f| %>
    <%# get the nested form to redirect to item/:id/comments  %>
    <% if !@item %>
        <%= f.label :item %>:<br>
        <%= f.collection_select :item_id, Item.all, :id, :name %><br>
    <% end %>

    <%= f.label :content %>:<br>
    <%= f.text_area :content %><br>

    <%= f.submit %>
<% end %>

