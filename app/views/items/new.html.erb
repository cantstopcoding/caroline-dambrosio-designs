<h1>New Item</h1>

<%= form_for @item do |f| %>
    <%= f.label :name %>:<br>
    <%= f.text_field :name %><br>
    
    <%= f.label :image %>:<br>
    <%= f.text_field :image %><br>
    
    <%= f.label :price %>:<br>
    <%= f.number_field :price %><br>
    
    <%= f.label :description %>:<br>
    <%= f.text_field :description %><br>
      

    <%= f.submit %>
<% end %>